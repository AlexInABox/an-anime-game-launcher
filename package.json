{
    "name": "an-anime-game-linux-launcher",
    "version": "0.1.0",
    "description": "An Anime Game Linux Launcher",
    "author": "Nikita Podvirnyy",
    "license": "GPL-3.0",
    "main": "entry.js",
    "scripts": {
        "dev": "tsc && sass src/sass:public/css -s compressed --no-source-map",
        "start": "npm run dev && electron .",
        "build:win": "npm run dev && electron-builder --win",
        "build:linux": "npm run dev && electron-builder --linux"
    },
    "build": {
        "productName": "An Anime Game Linux Launcher",
        "artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
        "appId": "com.krypt0nn.an-anime-game-linux-launcher",
        "directories": {
            "output": "dist"
        },
        "files": [
            "public/**/*",
            "entry.js"
        ],
        "win": {
            "icon": "public/images/icon512.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "public/images/icon512.png",
            "category": "Utility",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "artifactName": "${productName}-${os}-${version}-setup.${ext}",
            "deleteAppDataOnUninstall": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "devDependencies": {
        "electron": "^14.0.0",
        "electron-builder": "^22.13.1",
        "sass": "^1.41.0",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "cash-dom": "^8.1.0"
    }
}
