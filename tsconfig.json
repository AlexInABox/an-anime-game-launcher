{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "outDir": "public/js"
    },
    "include": ["src/ts/*", "src/ts/lib/*", "src/ts/types/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}